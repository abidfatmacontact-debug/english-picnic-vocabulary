            },
            {
                emoji: 'ðŸ¥—',
                main: 'Veggies and dip',
                description: 'Fresh vegetables with sauce'
            },
            {
                emoji: 'ðŸ¦',
                main: 'A yoghurt',
                description: 'Creamy dairy product'
            },
            {
                emoji: 'ðŸ¥¤',
                main: 'A water bottle',
                description: 'Container for water'
            },
            {
                emoji: 'ðŸ¥¡',
                main: 'A reusable box',
                description: 'Container you can use many times'
            },
            {
                emoji: 'ðŸ½',
                main: 'A paper plate',
                description: 'Disposable plate made of paper'
            },
            {
                emoji: 'ðŸ´',
                main: 'A bamboo fork',
                description: 'Eco-friendly eating utensil'
            },
            {
                emoji: 'ðŸ¥„',
                main: 'A bamboo spoon',
                description: 'Natural wooden spoon'
            },
            {
                emoji: 'ðŸ”ª',
                main: 'A bamboo knife',
                description: 'Sustainable cutting tool'
            },
            {
                emoji: 'â™»ï¸',
                main: 'A reusable bag',
                description: 'Bag you can use repeatedly'
            },
            {
                emoji: 'ðŸŒ±',
                main: 'A compost',
                description: 'Organic waste breakdown'
            },
            {
                emoji: 'ðŸ—‘',
                main: 'A recycle bin',
                description: 'Container for recyclable items'
            },
            {
                emoji: 'ðŸ—‘',
                main: 'Waste / Trash',
                description: 'Discarded unwanted material'
            }
        ];
        
        const grid = document.getElementById('wordsGrid');
        const speedSlider = document.getElementById('speedSlider');
        const speedValue = document.getElementById('speedValue');
        
        // Create word cards
        vocabulary.forEach((item, index) => {
            const card = document.createElement('div');
            card.className = 'word-card';
            card.innerHTML = `
                <div class="word-content">
                    <div class="emoji">${item.emoji}</div>
                    <div class="word-main">${item.main}</div>
                    <div class="word-description">${item.description}</div>
                    <button class="speaker-button" title="Click to hear pronunciation">ðŸ”Š</button>
                </div>
            `;
            
            card.addEventListener('click', () => speakWord(item.main, card));
            grid.appendChild(card);
        });
        
        // Update speed display
        speedSlider.addEventListener('input', (e) => {
            speedValue.textContent = e.target.value + 'x';
        });
        
        // Text-to-speech function
        function speakWord(text, cardElement) {
            cardElement.classList.add('playing');
            
            const utterance = new SpeechSynthesisUtterance(text);
            utterance.lang = 'en-US';
            utterance.rate = parseFloat(speedSlider.value);
            utterance.pitch = 1;
            utterance.volume = 1;
            
            utterance.onend = () => {
                cardElement.classList.remove('playing');
            };
            
            utterance.onerror = () => {
                cardElement.classList.remove('playing');
            };
            
            window.speechSynthesis.cancel();
            window.speechSynthesis.speak(utterance);
        }
    </script>
